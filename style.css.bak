/* Backup of style.css */

/* Base styles */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');
:root{
  --container: 1100px;
  --page-padding: 20px;
  --accent: #0b74d9; /* Fourkites blue */
  --uber: #000000; /* Uber black */
  --grab: #00a551; /* Grab green */
  --fourkites: #0b74d9;
  --saffron: #f4c430;
  --bg-light: #f6f9ff;
  --muted: #6b7280;
}
*{box-sizing:border-box}
html,body{height:100%}
body{
  font-family: 'Inter', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
  color: #111827;
  background: #ffffff;
  -webkit-font-smoothing:antialiased;
}
.container{max-width:var(--container);margin:0 auto;padding:40px 20px}

/* Header */
.site-header{position:sticky;top:0;background:#fff;z-index:1000;border-bottom:1px solid #eee}
.header-inner{display:flex;align-items:center;justify-content:space-between;padding:12px 20px}
.brand{font-weight:700;font-size:1.05rem}
.main-nav{display:flex;gap:18px;align-items:center}
.main-nav a{color:var(--muted);text-decoration:none;font-weight:500}
.main-nav a.cta{background:var(--accent);color:#fff;padding:8px 12px;border-radius:6px}
.nav-toggle{display:none;background:none;border:0;font-size:20px}

/* Hero */
.hero{background:linear-gradient(180deg,#f7fbff, #ffffff);padding:80px 0}
.hero .name-highlight{color:var(--accent);font-weight:700}
.lead{color:var(--muted);max-width:760px}
.btn{display:inline-block;background:var(--accent);color:#fff;padding:10px 16px;border-radius:8px;text-decoration:none}

/* Light sections (About, Skills) */
.section-light{background:var(--bg-light);border-radius:10px;margin:24px 0;padding:24px}

/* Skills */
.skills-grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:14px;margin-top:12px}
.skill{background:#fff;padding:12px;border-radius:8px;border:1px solid #eee}
.skill-name{font-weight:600;margin-bottom:8px}
.skill-bar{background:#eef2ff;height:10px;border-radius:999px;overflow:hidden}
.skill-fill{height:100%;background:linear-gradient(90deg,var(--accent),#2e8bf8);width:0}

/* Roles */
.roles .company-list{display:flex;flex-direction:column;gap:12px;margin-top:12px}
.company{color:#fff;padding:18px;border-radius:8px}
.company h3{margin:0 0 6px}
.company ul{margin-top:8px;padding-left:18px;color:rgba(255,255,255,0.95)}
.company-uber{background:var(--uber)}
.company-grab{background:var(--grab)}
.company-fourkites{background:var(--fourkites)}

/* Education */
.education{background:var(--saffron);color:#fff;border-radius:10px;padding:20px;margin:24px 0}
.edu-inner{display:flex;flex-wrap:wrap;gap:20px}
.edu-item{min-width:220px}

/* Footer */
.site-footer{border-top:1px solid #eee;padding:18px 0;margin-top:40px}
.footer-inner{display:flex;justify-content:space-between;align-items:center;gap:16px}
.footer-links a{color:var(--muted);text-decoration:none}

/* Responsive */
@media (max-width:900px){
  .main-nav{display:none}
  .nav-toggle{display:block}
  .header-inner{padding:12px}
  .footer-inner{flex-direction:column;align-items:flex-start}
}
@media (max-width:520px){
  .hero{padding:40px 0}
  .container{padding:20px}
}

/* Utility */
.hidden{display:none !important}
